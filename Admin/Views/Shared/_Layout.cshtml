<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>

    <link rel="stylesheet" href="~/assets/css/AdminLayoutStyle.css" />
    <link rel="stylesheet" href="~/assets/toastr/toastr.css" />
    <!-- -- Icon file Start -->
    <link rel="stylesheet" href="~/assets/fonts/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/assets/fonts/font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="~/assets/fonts/mdi/css/materialdesignicons.min.css" />
    <link rel="icon" href="~/images/icon/myIcon.png" />
    <!-- -- Icon file End -->
</head>
<body>
     <!-- Loader Start -->
        <div id="loader-Container">
            <div id="load" class="loader"></div>
        </div>
        <!-- Loader End -->

      <!-- Main container start -->
        <div class="container-scroller">
            <!-- sidebar start -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">

                <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                    <a class="sidebar-brand brand-logo" href="Dashboard.aspx">
                        <img src="~/images/icon/Admin.png" alt="logo" />
                    </a>
                    <a class="sidebar-brand brand-logo-mini" href="Dashboard.aspx">
                        <img src="~/images/icon/myIcon.png" alt="logo" />
                    </a>
                </div>

                <ul class="nav">

                    <li class="nav-item nav-category">
                        <span class="nav-link">Navigation</span>
                    </li>

                    <li class="nav-item menu-items">
                        <a class="nav-link" asp-action="Dashboard" asp-controller="Admin">
                            <span class="menu-icon">
                                <i class="mdi mdi-speedometer"></i>
                            </span>
                            <span class="menu-title">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item menu-items">
                        <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false"
                            aria-controls="ui-basic">
                            <span class="menu-icon">
                                <i class="mdi mdi-alpha-p-box"></i>
                            </span>
                            <span class="menu-title">Protfolio</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item menu-items">
                                    <a class="nav-link" asp-action="AddPortfolioDetail" asp-controller="Portfolio">
                                        <span class="menu-icon">
                                            <i class="mdi mdi-creation"></i>
                                        </span>
                                        <span class="menu-title">Add Portfolio Detail</span>
                                    </a>
                                </li>
                                 <li class="nav-item menu-items">
                                    <a class="nav-link" href="#">
                                        <span class="menu-icon">
                                            <i class="mdi mdi-view-dashboard-variant"></i>
                                        </span>
                                        <span class="menu-title">View Portfolio Detail</span>
                                    </a>
                                </li>                               
                            </ul>
                        </div>
                    </li>                   

                    <li class="nav-item menu-items">
                        <a class="nav-link" href="#">
                            <span class="menu-icon">
                                <i class="mdi mdi-settings"></i>
                            </span>
                            <span class="menu-title">Settings</span>
                        </a>
                    </li>                   
                </ul>
            </nav>
            <!-- sidebar end -->

            <!-- Body container start -->
            <div class="container-fluid page-body-wrapper">

                <!-- Header Navbar start -->
                <nav class="navbar p-0 fixed-top d-flex flex-row">
                    <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                        <a class="navbar-brand brand-logo-mini" asp-action="Dashboard" asp-controller="Admin">
                            <img src="~/images/icon/myIcon.png" alt="logo" />
                        </a>
                    </div>
                    <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                        <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                            <span class="mdi mdi-menu"></span>
                        </button>
                        <ul class="navbar-nav w-100">
                            <li class="nav-item w-100">
                                <div class="nav-link mt-2 mt-md-0 d-lg-flex search" style="visibility: collapse;">
                                    <input type="text" class="form-control" placeholder="Search">
                                </div>
                            </li>
                        </ul>
                        <ul class="navbar-nav navbar-nav-right">
                            <li class="nav-item dropdown d-none d-lg-block">
                                <a class="nav-link btn btn-success create-new-button" id="createbuttonDropdown" asp-action="Dashboard" asp-controller="Portfolio">My Portfolio</a>
                            </li>
                            <li class="nav-item nav-settings d-none d-lg-block">
                                <a class="nav-link" asp-action="Dashboard" asp-controller="Admin">
                                    <i class="mdi mdi-view-grid"></i>
                                </a>
                            </li>
                            <li class="nav-item dropdown border-left">
                                <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-email"></i>
                                    <span class="count bg-success"></span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
                                    <h6 class="p-3 mb-0">Messages</h6>
                                    <div class="dropdown-divider"></div>
                                            <a class="dropdown-item preview-item">
                                                <div class="preview-thumbnail">
                                                    <i class="rounded-circle profile-pic mdi mdi-message-alert text-danger"></i>
                                                </div>
                                                <div class="preview-item-content">
                                                    <p class="preview-subject ellipsis mb-1"></p>
                                                    <p class="text-muted mb-1"></p>
                                                    <p class="text-muted mb-0"></p>
                                                </div>
                                            </a>
                                            <div class="dropdown-divider"></div>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
                                    <div class="navbar-profile">
                                        <img class="img-xs rounded-circle" src="~/images/icon/myIcon.png" />
                                        <p class="mb-0 d-none d-sm-block navbar-profile-name">@ViewBag.Name</p>
                                        <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                    </div>
                                </a>

                                <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                                    <h6 class="p-3 mb-0">Profile</h6>
                                    <div class="dropdown-divider"></div>
                                    <a href="../default.aspx" class="dropdown-item preview-item">
                                        <div class="preview-thumbnail">
                                            <div class="preview-icon bg-dark rounded-circle">
                                                <i class="mdi mdi-logout text-danger"></i>
                                            </div>
                                        </div>
                                        <div class="preview-item-content">
                                            <a class="preview-subject mb-1" asp-action="Logout" asp-controller="Account">Log out</a>
                                        </div>
                                    </a>
                                </div>

                            </li>
                        </ul>
                        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                            <span class="mdi mdi-format-line-spacing"></span>
                        </button>
                    </div>
                </nav>
                <!-- Header Navbar End -->

                <!-- Main Body Start -->
                <div class="main-panel">

                    <!-- Content Body Start -->
                    <div class="content-wrapper">                        
                        @RenderBody()
                    </div>
                    <!-- Content Body end -->

                    <!-- Footer start -->
                    <footer class="footer">
                        <div class="d-sm-flex justify-content-center justify-content-sm-between">
                            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © Portfolio.com 2022
                            </span>
                            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Admin                                 
                                <a href="#" target="_blank">@ViewBag.Name</a>
                                From
                                <a asp-action="Dashboard" asp-controller="Admin" class="text-decoration-none text-white-50">Admin.com</a>
                            </span>
                        </div>
                    </footer>
                    <!-- Footer end -->

                </div>
                <!-- Main Body End -->
            </div>
            <!-- Body container end -->
        </div>
        <!-- Mian container end -->

    <script src="~/assets/Jquery/jquery.min.js"></script>
    <script src="~/assets/js/AdminLayout.js"></script>
    <script src="~/assets/toastr/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
